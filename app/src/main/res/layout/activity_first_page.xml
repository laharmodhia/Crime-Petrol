<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@drawable/background">

<!--<RelativeLayout-->
<!--android:layout_width="match_parent"-->
<!--android:layout_height="wrap_content"-->
<!--android:scrollbars="none">-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="23.3dp"
    android:layout_marginRight="23.3dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center" />

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#332b28"
        android:textSize="13.3sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text="UserName"/>

    <EditText
        android:id="@+id/usname"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#332b28"
        android:textSize="15sp"
        android:hint="Enter UserName"
        android:paddingTop="16.7dp"
        android:paddingBottom="16.7dp"
        android:paddingLeft="11.7dp"
        android:layout_marginTop="5.7dp"
        android:background="@drawable/field_rect"
        android:textColorHint="#000"/>

    <TextView
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#332b28"
        android:textSize="13.3sp"
        android:textStyle="bold"
        android:layout_marginTop="18.3dp"
        android:text="Password"/>

    <EditText
        android:id="@+id/pwd"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f9bba4"
        android:textSize="15sp"
        android:hint="Enter password"
        android:paddingTop="16.7dp"
        android:paddingBottom="16.7dp"
        android:inputType="textPassword"
        android:paddingLeft="11.7dp"
        android:paddingRight="17.7dp"
        android:drawableRight="@drawable/ic_eye"
        android:layout_marginTop="5.7dp"
        android:background="@drawable/field_rect"
        android:textColorHint="#000"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:text="Remember login details"
        android:layout_marginTop="5dp"
        android:id="@+id/checkbox"/>

    <TextView
        android:id="@+id/txt1"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#918585"
        android:textSize="13sp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Forgot password?"/>

    <TextView
        android:id="@+id/btn1"
        android:fontFamily="@font/roboto_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#000000"
        android:backgroundTint="#00f9f6f5"
        android:textSize="13sp"
        android:gravity="center"
        android:paddingTop="16.7dp"
        android:textStyle="bold"
        android:paddingBottom="16.7dp"
        android:layout_marginTop="21.7dp"
        android:text="Login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="#d1d0d0"/>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#918585"
            android:textSize="13sp"
            android:gravity="center"
            android:paddingRight="12.2dp"
            android:paddingLeft="12.2dp"
            android:text="OR\nConnect with"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="#d1d0d0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="21.3dp"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?"
            android:textSize="13.3sp"
            android:textStyle="bold"
            android:textColor="#e56139"/>

        <TextView
            android:id="@+id/btn2"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Create Account"
            android:textSize="13.3sp"
            android:textColor="#e56139"/>

    </LinearLayout>

</LinearLayout>

