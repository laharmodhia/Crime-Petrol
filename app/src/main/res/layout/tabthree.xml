<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#a2a4a2"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title of Missing Person"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <View
        android:layout_width="350dp"
        android:layout_height="2.60dp"
        android:background="#000"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Name"
                android:textSize="30dp"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:id="@+id/image1"
                android:src="@drawable/image111"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/city"
                android:hint="City"
                android:textSize="30dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birthdate"
                android:hint="Birthdate"
                android:textSize="30dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lastseen"
                android:hint="Lastseen"
                android:textSize="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:hint="Address"
                android:textSize="30dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Browser"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:id="@+id/browser3"/>


            <Button
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/submit3"
                android:text="Submit"
                android:textSize="30dp"/>
            <Button
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/cancel3"
                android:text="Cancel"
                android:textSize="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

